<?xml version="1.0" encoding="UTF-8"?>
    <Configuration status="INFO">
      <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
          <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <File name="CompressionContainerLogFile" fileName="/root/compression/compression.log">
        	<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"></PatternLayout></File></Appenders>
      <Loggers>
        <Root level="DEBUG">
          <AppenderRef ref="Console"/>
          <AppenderRef ref="CompressionContainerLogFile"/>
        </Root>
      </Loggers>
    </Configuration>
